WRITE AN ECP TO DISPLAY TWO CUSTOM SYMBOLS ON 16X2 ALPHANUMERIC LCD 


#include "delay.h"  
#include "LCD.h"    

void LCD_CGRAM(int n); // Function to write custom symbols to CGRAM

// LUT: 16 bytes = 8 bytes for each custom symbol (2 symbols)
u8 LUT[] = {
    0x00, 0x17, 0x14, 0x1F, 0x05, 0x05, 0x1D, 0x00,  // Symbol 0
    0x04, 0x04, 0x04, 0x1F, 0x1F, 0x0E, 0x04, 0x00   // Symbol 1
};

int main()
{
    u8 i, c = 16;             // 'c' = total number of bytes to write (2 symbols Ã— 8 bytes each)
    LCD_INIT();                // Initialize LCD
    LCD_COMMAND(0x80);         // Set cursor to first row, first column
    LCD_STR("Two Symbols: ");  // Display text before symbols
    LCD_CGRAM(c);              // Write all 16 bytes of LUT to CGRAM (both symbols)
    LCD_COMMAND(0x8D);         // Move cursor to column 14 on first row
    for(i = 0; i < c / 8; i++)   // Loop over each symbol
    {
        LCD_DATA(i);           // Display custom symbol at CGRAM location 0 (i=0) and 1 (i=1)
    }
}

// -------------------- Write custom symbols to CGRAM --------------------
void LCD_CGRAM(int n)
{
    u8 i;
    LCD_COMMAND(0x40);          // Set CGRAM address to 0 (start of custom symbols)
    for(i = 0; i < n; i++)
    {
        LCD_DATA(LUT[i]);       // Send each byte of symbol pattern to CGRAM
    }
}

